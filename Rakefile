require 'rubygems'
require 'rake'
require 'echoe'

Echoe.new('oauthc', '0.0.1') do |p|
  p.description    = "A simple oauth client to test your oauth connection"
  p.url            = "http://github.com/rngtng/oauthc"
  p.author         = "rngtng - Tobias Bielohlawek"
  p.email          = "tobi @nospam@ rngtng.com"
  p.ignore_pattern = ["tmp/*", "script/*"]
  p.development_dependencies = []
  p.runtime_dependencies = ["highline >= 1.5.1", "json >= 1.1.9", "oauth >= 0.3.6"]
end